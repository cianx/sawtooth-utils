#!/bin/bash

HTTPS_PROXY=$https_proxy
HTTP_PROXY=$http_proxy

docker run \
    -v $(pwd):/project/sawtooth-core \
    --workdir /project/sawtooth-core \
    --env https_proxy=$https_proxy \
    --env http_proxy=$http_proxy \
    --env HTTPS_PROXY=$HTTPS_PROXY \
    --env HTTP_PROXY=$HTTP_PROXY \
   -t ubuntu:xenial \
   ./bin/install_packaging_deps && ./bin/build_ext_debs

